{
  "manifest_version": 2,
  "name": "Universal Amazon Killer",
  "description": "Find a book in Amazon, et fetch it in a real bookstore",
  "homepage_url": "https://github.com/adriantombu/universal-amazon-killer",
  "version": "1.3.13",
  "author": "Adrian Tombu",
  "icons": {
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png"
  },
  "browser_action": {
    "default_title": "Find the book",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "64": "assets/icon-64.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.fr/*",
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.it/*",
        "*://*.amazon.in/*",
        "*://*.amazon.es/*",
        "*://*.amazon.cn/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.de/*",
        "*://*.amazon.com.au/*"
      ],
      "js": [
        "app.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab"
  ]
}
